CONFIG_PREBOOT=|
sf probe; 
sf read ${loadaddr} 0xfff000; 
env import -t ${loadaddr} 0xfff; 
env set BBEnvList "${BBExtraEnvList} BBExtraEnvList boot_targets BBEnable SPIUpdate SPIUpdDevType SPIUpdDevNum SPIUpdPartNum SPIUpdPrefix SPIUpdFileName NBnow NBSticky NBBootPrefix NBDevType NBDevNum NBPartNum DBDevType DBDevNum DBPartNum DBExtlinuxConfFullPath DBDevType DBDevNum DBPartNum DBExtlinuxConfFullPath"; 
|

DDDDDDDDDDRRRRRRRRRAAAAAAAAAAFFFFFFFFFTTTTTTTTTTTTTTT


CONFIG_BOOTCOMMAND=|
if env exists BBEnable; then 
	if test "${SPIUpdate}" = 1; then 
		env set SPIUpdate 0; 
		load "${SPIUpdDevType}" "${SPIUpdDevNum}":"${SPIUpdPartNum}" "${loadaddr}" ${SPIUpdPrefix}${SPIUpdFileName}; 
		sf update "${loadaddr}" 0x0 0xfff000; 
		env export -t "${loadaddr}" boot_targets ${BBEnvList}; 
		reset
	fi;
	if test "${BBEnable}" = 1; then 
		echo "BoughBoot: found BBEnv in SPI"; 
		if test "${NBnow}" = 0; then 
			echo "BoughBoot: NBnow is 0"; 
			echo "BoughBoot: we booted another os last time, lets go back to defaultboot, Ignoring NextBoot..."; 
		else; 
			echo "BoughBoot: NBnow is 1"; 
			if test "${NBSticky}" = 0; then 
				echo "BoughBoot: NBSticky is 0"; 
				echo "BoughBoot: avoid bootloop, ignore next NextBoot..."; 
				setenv NBnow 0; 
				echo "BoughBoot: NBnow set to 0, exporting vars"; 
				env export -t "${loadaddr}" boot_targets ${BBEnvList}; 
				echo "BoughBoot: saving to ${BBEnvDevType} ${BBEnvDevNum}:${BBEnvPartNum}/BBEnv.txt"; 

			fi; 
			for NBBootPrefixTest in / /boot/ /boot/BB/ /BB/ /BoughBoot/ "${NBBootPrefix}"; do 
				if test -e "${NBDevType}" "${NBDevNum}":"${NBPartNum}" "${NBBootPrefixTest}BBextlinux.conf"; then 
					echo "BoughBoot: trying to boot ${NBDevType} ${NBDevNum}:${NBPartNum} ${NBBootPrefixTest}BBextlinux.conf"; 
					sysboot "${NBDevType}" "${NBDevNum}":"${NBPartNum}" "${NBBootPrefixTest}BBextlinux.conf"; 
				fi; 
			done;  
		fi;
	fi; 
fi; 
echo "BoughBoot: no NextBoot or failed, lets try defaultboot"; 
sysboot "${DBDevType}" "${DBDevNum}":"${DBPartNum}" any "${scriptaddr}" "${DBExtlinuxConfFullPath}"; 
echo "BoughBoot: no DefaultBoot or failed, lets go back to BoughBoot"; 
sysboot "${BBEnvDevType}" "${BBEnvDevNum}":"${BBEnvPartNum}" any "${scriptaddr}" ${BBEnvPrefix}extlinux.conf; 
echo "BoughBoot: well, an attempt was made. just boot normaly..."; 
bootflow scan -Gb;
|


